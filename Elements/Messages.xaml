<UserControl x:Class="Interface_Osennikov.Elements.Messages"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Interface_Osennikov.Elements"
                          mc:Ignorable="d" 
             MouseDoubleClick="DeleteMessage"
             MouseRightButtonDown="UserControl_MouseRightButtonDown">
    <Grid Height="auto" MaxWidth="200" HorizontalAlignment="Left" Background="Black" Margin="5">
        <Border CornerRadius="15" Width="30" Height="30" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <Border.Background>
                <ImageBrush ImageSource="/Images/aooshchepkov.jpg" Stretch="UniformToFill"/>
            </Border.Background>
        </Border>

        <StackPanel Margin="45,0,0,0">
            <Image x:Name="image" Visibility="Collapsed" MaxWidth="150" MaxHeight="150"/>
            <TextBlock x:Name="Message" Margin="0,5,0,0" Padding="5" TextWrapping="Wrap" Text="Привет, как дела?" Foreground="White"/>
            <TextBlock x:Name="Date" Margin="0,0,0,5" TextWrapping="Wrap" Padding="5,0,0,0" Text="28.10.2025" Foreground="White" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="70"/>
        </StackPanel>

        <Grid.Effect>
            <DropShadowEffect/>
        </Grid.Effect>
    </Grid>
</UserControl>
